<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/tutorProfileImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_placeholder"
            android:background="@drawable/circle_background" />

        <!-- Name -->
        <TextView
            android:id="@+id/tutorNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tutor Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Email -->
        <TextView
            android:id="@+id/tutorEmailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email@example.com"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

        <!-- Rating Text -->
        <TextView
            android:id="@+id/tutorRatingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating: 4.5"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />


        <!-- Rating Bar -->
        <RatingBar
            android:id="@+id/tutorRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.1"
            android:isIndicator="true"
            android:layout_marginBottom="16dp" />

        <!-- Degrees -->
        <TextView
            android:id="@+id/tutorDegreesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Degrees:\nBSc in Computer Science"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <!-- Experience -->
        <TextView
            android:id="@+id/tutorExperienceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teaching Experience:\n3 years tutoring high school students"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <!-- Philosophy -->
        <TextView
            android:id="@+id/tutorPhilosophyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teaching Philosophy:\nEmpowering students through active learning."
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <!-- Subjects -->
        <TextView
            android:id="@+id/tutorSubjectsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teaching Subjects:\n• Math\n• Physics"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>
